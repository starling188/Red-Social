@using System.Security.Claims

@model Domain.Models.perfilsmodel.MediaFileViewModel
@{
    ViewData["Title"] = "Subir Archivo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="SubidaFoto" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="File">Archivo</label>
        <input type="file" name="File" id="File" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="FileType">Tipo de archivo</label>
        <select asp-for="FileType" class="form-control">
            <option value="ProfilePhoto">Foto de perfil</option>
            <option value="Image">Imagen</option>
            <option value="Video">Video</option>
        </select>
    </div>

    <input type="hidden" asp-for="UserId" value="@User.FindFirst(ClaimTypes.NameIdentifier).Value" />

    <button type="submit" class="btn btn-primary">Subir</button>
</form>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["Message"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger mt-3">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
