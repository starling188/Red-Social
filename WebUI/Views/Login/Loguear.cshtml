@model Aplication.Dtos.Login.InicioModel //.InicioModel

@{
    Layout = null;
    ViewData["Title"] = "Inicio de Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Incluye los recursos CSS y JS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/Login/Login.css"> <!-- Aquí enlazas tu archivo CSS personalizado -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/alerts.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>

</head>
<body>
    <div class="container">
       
        <!--Incluir Alertas parciales-->
        @Html.Partial("_Alerts")

        <div class="d-flex justify-content-center h-100">
            <div class="card">
                <div class="card-header">
                    <h3>Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Loguear" method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input asp-for="Correo" id="correoInput" class="form-control" placeholder="Correo" />
                        </div>

                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input asp-for="Contrasena" type="password" id="contrasenaInput" class="form-control" placeholder="Contraseña" />
                        </div>

                        <div class="row align-items-center remember">
                            <input type="checkbox">Recordarme
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn float-right login_btn">Iniciar</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        ¿No tienes una cuenta?<a asp-action="Register" asp-controller="Login">Regístrate</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a asp-action="RestablecerContraseña" asp-controller="Login">¿Olvidaste tu contraseña?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script para las alertas -->
    <script>
        // Función para hacer que las alertas desaparezcan automáticamente
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert');

            alerts.forEach(alert => {
                // Desaparecer después de 5 segundos
                setTimeout(() => {
                    alert.classList.add('fade-out');

                    // Eliminar del DOM después de la animación
                    setTimeout(() => {
                        alert.remove();
                    }, 500);
                }, 5000);
            });
        });
    </script>
</body>
</html>