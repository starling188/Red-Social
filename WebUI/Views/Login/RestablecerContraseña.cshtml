@model Domain.Models.Login.RestablecerPasswordModel

@{
    Layout = null;
    ViewData["Title"] = "Restablecer Contraseña";
}

<h2>Restablecer Contraseña</h2>

<form asp-action="RestablecerContraseña" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NuevaContraseña"></label>
        <input asp-for="NuevaContraseña" type="password" class="form-control" />
        <span asp-validation-for="NuevaContraseña" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmarContraseña"></label>
        <input asp-for="ConfirmarContraseña" type="password" class="form-control" />
        <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
</form>

<script>
    // Verificar si hay un mensaje en ViewData
    var mensaje = '@ViewData["Mensaje"]';
    if (mensaje) {
        alert(mensaje);
    }
</script>
